<div class="container">
  <h3>Vista real time products</h3>
  <hr />
  <form
    name="formProducts"
    id="formProducts"
    class="row g-3 needs-validation"
    novalidate
    method="POST"
    action="/realTimeProducts"
  >
    <div class="col-md-3">
      <label for="title" class="form-label">Título del producto</label>
      <input
        name="title"
        type="text"
        class="form-control"
        id="title"
        placeholder="Ingrese un título"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md-6">
      <label for="description" class="form-label">Descripción</label>
      <input
        name="description"
        type="text-area"
        class="form-control"
        id="description"
        placeholder="Ingrese una descripción"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md-3">
      <label for="price" class="form-label">Precio</label>
      <input
        name="price"
        type="text-area"
        class="form-control"
        id="price"
        placeholder="Ingrese el precio"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md-4">
      <label for="code" class="form-label">Codigo</label>
      <input
        name="code"
        type="text"
        class="form-control"
        id="code"
        placeholder="Ingrese el código"
        required
      />
      <div class="invalid-feedback">
        Please provide a valid city.
      </div>
    </div>
    <div class="col-md-4">
      <label for="category" class="form-label">Categoria</label>
      <input
        name="category"
        type="text"
        class="form-control"
        id="category"
        placeholder="Ingrese la categoria"
        required
      />
      <div class="invalid-feedback">
        Please provide a valid city.
      </div>
    </div>
    <div class="col-md-4">
      <label for="stock" class="form-label">Cantidad</label>
      <input
        name="stock"
        type="text"
        class="form-control"
        id="stock"
        placeholder="Ingrese la cantidad"
        required
      />
      <div class="invalid-feedback">
        Please provide a valid zip.
      </div>
    </div>
    <div class="col-md-12">
      <label for="thumbnail" class="form-label">Imagenes</label>
      <input
        name="thumbnail"
        type="text"
        class="form-control"
        id="thumbnail"
        placeholder="Ingrese URL de las imagenes"
        required
      />
      <div class="invalid-feedback">
        Please provide a valid zip.
      </div>
    </div>
    {{! <div class="col-12">
      <div class="form-check">
